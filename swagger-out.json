{
  "swagger": "2.0",
  "info": {
    "title": "Reading API",
    "description": "CSE341 Project 2 - API to track books that readers have read",
    "version": "1.0.0"
  },
  "host": "cse341contactsw1.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/": {
      "get": {
        "tags": ["Hello Readers"],
        "description": "Route de test de l'API",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },

    "/books": {
      "get": {
        "tags": ["Books"],
        "description": "Récupérer la liste des livres",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Books"],
        "description": "Ajouter un livre",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "isbn": { "type": "string" },
                "title": { "type": "string" },
                "author": { "type": "string" },
                "publisher": { "type": "string" },
                "year": { "type": "string" },
                "edition": { "type": "string" },
                "format": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "422": { "description": "Unprocessable Entity" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/books/{id}": {
      "get": {
        "tags": ["Books"],
        "description": "Récupérer un livre via son ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" }
        }
      },

      "put": {
        "tags": ["Books"],
        "description": "Mettre à jour un livre",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "isbn": { "type": "string" },
                "title": { "type": "string" },
                "author": { "type": "string" },
                "publisher": { "type": "string" },
                "year": { "type": "string" },
                "edition": { "type": "string" },
                "format": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "422": { "description": "Unprocessable Entity" },
          "500": { "description": "Internal Server Error" }
        }
      },

      "delete": {
        "tags": ["Books"],
        "description": "Supprimer un livre",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/books/isbn/{isbn}": {
      "get": {
        "tags": ["Books"],
        "description": "Récupérer un livre via un ISBN",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "isbn",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },

    "/readers": {
      "get": {
        "tags": ["Readers"],
        "description": "Récupérer la liste des lecteurs",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Readers"],
        "description": "Ajouter un lecteur",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "books": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "422": { "description": "Unprocessable Entity" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/readers/{id}": {
      "get": {
        "tags": ["Readers"],
        "description": "Récupérer un lecteur via son ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" }
        }
      },

      "put": {
        "tags": ["Readers"],
        "description": "Mettre à jour un lecteur",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "books": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "422": { "description": "Unprocessable Entity" },
          "500": { "description": "Internal Server Error" }
        }
      },

      "delete": {
        "tags": ["Readers"],
        "description": "Supprimer un lecteur",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
